{% extends "shuup/front/base.jinja" %}

{% block content_title %}{% endblock %}

{% block extra_main_class %}index{% endblock %}

{% block content %}

{% placeholder frontpage_carousel %}{% endplaceholder %}
    {% placeholder "front_content" %}
        {% row %}
            {% plugin "product_highlight" %}
                type = "newest"
                title = "New Products"
                count = 13
            {% endplugin %}
        {% endrow %}
        {% row %}
            {% plugin "product_highlight" %}
                type = "best_selling"
                title = "Best selling products"
                count = 13
            {% endplugin %}
        {% endrow %}
    {% endplaceholder %}
{% endblock %}

{% block post_navigation_content %}
    <div class="container">
        {% placeholder "frontpage-content-top" %}{% endplaceholder %}
    </div>
{% endblock %}

{% block post_sidebar_content %}
    <div class="container">
        {% placeholder "frontpage-content-bottom" %}{% endplaceholder %}
    </div>
{% endblock %}
